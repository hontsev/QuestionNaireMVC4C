<!DOCTYPE html>
<html lang="zh-cn">
<head>
    <link href="@Url.Content("~/favicon.ico")" rel="shortcut icon">
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta name="description" content="">
    <meta name="author" content="">
    <title>北航软件学院调研系统</title>
    <link href="@Url.Content("~/Content/sb-admin-2.css")" rel="stylesheet">
    <link href="@Url.Content("~/Content/bootstrap.min.css")" rel="stylesheet">
    <link href="@Url.Content("~/Content/bootstrap-theme.min.css")" rel="stylesheet">
    <link href="@Url.Content("~/bower_components/font-awesome/css/font-awesome.min.css")" rel="stylesheet">
    <link href="@Url.Content("~/bower_components/metisMenu/src/metisMenu.css")" rel="stylesheet">

    <script src="@Url.Content("~/Scripts/jquery-3.1.0.min.js")"></script>
    <script src="@Url.Content("~/Scripts/bootstrap.js")"></script>
    <script src="@Url.Content("~/Scripts/sb-admin-2.js")"></script>
    <script src="@Url.Content("~/bower_components/metisMenu/src/metisMenu.js")"></script>
    @*@Styles.Render("~/Content/css")
    @Styles.Render("~/metisMenu/css")
    @Styles.Render("~/font-awesome")
    @Scripts.Render("~/jquery")*@

    @*@Scripts.Render("~/metisMenu/js")*@

    <!-- HTML5 Shim and Respond.js IE8 support of HTML5 elements and media queries -->
    <!-- WARNING: Respond.js doesn't work if you view the page via file:// -->
    <!--[if lt IE 9]>
        <script src="https://oss.maxcdn.com/libs/html5shiv/3.7.0/html5shiv.js"></script>
        <script src="https://oss.maxcdn.com/libs/respond.js/1.4.2/respond.min.js"></script>
    <![endif]-->
</head>
<body>
    <div id="wrapper">
        <!-- Navigation -->
        <nav class="navbar navbar-default navbar-static-top" role="navigation" style="margin-bottom: 0">
            <div class="navbar-header">
                <a class="navbar-brand" href="@Url.Action("Index","Home")">北航软件学院调研系统 - @ViewBag.Title</a>

            </div>

            @if (!Object.Equals(Session["id"], null))
{
    using (Html.BeginForm("Logout", "Home", FormMethod.Post, new { id = "logoutForm", @class = "navbar-right" }))
    {
        @Html.AntiForgeryToken()

        <ul class="nav navbar-nav navbar-right">
            <li>
                @Html.ActionLink("你好, " + Session["name"].ToString() + " !", "Userinfo", "Home")
            </li>
            <li>@Html.ActionLink("修改密码", "Userinfo", "Home")</li>
            <li>@Html.ActionLink("登出", "Logout", "Home")</li>
        </ul>
    }
}
            else
            {
                <script>location.href = "@Url.Content("~")";</script>
            }


            <!-- /.navbar-top-links -->
            <div class="navbar-default sidebar" role="navigation">
                @if (!Object.Equals(Session["id"], null))
{
    <div class="sidebar-nav navbar-collapse">
        <ul class="nav" id="side-menu">
            @if (Session["type"].ToString() == "1")
            {
                <li>
                    <a href="@Url.Action("AddClassInfo","Admin")"><i class="fa fa-table fa-fw"></i> 添加课程</a>
                </li>
                <li>
                    <a href="@Url.Action("CheckClassInfo","Admin")"><i class="fa fa-table fa-fw"></i> 查看课程</a>
                </li>
                
                <li style="border-top:2px solid #ccc;"> 
                    <a href="@Url.Action("CheckQn","Admin")"><i class="fa fa-edit fa-fw"></i> 查看问卷</a>
                </li>
                <li>
                    <a href="@Url.Action("AddQn","Admin")"><i class="fa fa-edit fa-fw"></i> 添加问卷</a>
                </li>

    <li style="border-top:2px solid #ccc;">
        <a href="@Url.Action("CheckUser","Admin")"><i class="fa fa-users fa-fw"></i> 用户管理</a>
    </li>
            }
            else if (Session["type"].ToString() == "2")
            {
                <li>
                    <a href="@Url.Action("CheckClassInfo","ProjectUser")"><i class="fa fa-table fa-fw"></i> 查看课程</a>
                </li>
            }
        </ul>
    </div>
}


                <!-- /.sidebar-collapse -->
            </div>
            <!-- /.navbar-static-side -->
        </nav>
        <!-- Page Content -->
        <div id="page-wrapper">
            <div class="container-fluid">
                <div class="row">
                    @RenderBody()
                </div>
                <!-- /.row -->

            </div>
            <!-- /.container-fluid -->
        </div>
        <!-- /#page-wrapper -->
    </div>
    <!-- /#wrapper -->
    @*<!-- jQuery -->
        <script src="../bower_components/jquery/dist/jquery.min.js"></script>
        <!-- Bootstrap Core JavaScript -->
        <script src="../bower_components/bootstrap/dist/js/bootstrap.min.js"></script>
        <!-- Metis Menu Plugin JavaScript -->
        <script src="../bower_components/metisMenu/dist/metisMenu.min.js"></script>
        <!-- Custom Theme JavaScript -->
        <script src="../dist/js/sb-admin-2.js"></script>*@
</body>
</html>

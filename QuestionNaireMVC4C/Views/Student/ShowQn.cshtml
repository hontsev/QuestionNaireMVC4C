        } else if (type == "4") {
            elem = "";
            elem += '<div class="panel-default" qid="' + id + '">';
            elem += '<div class="panel panel-heading">' + '第 <label>' + num + '</label> 题 - <font color="gray">矩阵单选题（评价教师）</font>' + '</div>';

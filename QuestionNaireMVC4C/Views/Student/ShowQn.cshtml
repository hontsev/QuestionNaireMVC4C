    //保存问卷
    function saveQn() {

        var as = new Array();
        var finish = true;
        $("#questions").find(".panel-default").each(function () {
            var a = new Object();
            a.answer = "";
            id = $(this).attr("qid");
            a.qid = id;
            type = $(this).find(".panel-heading").first().find("font").first().text();
            console.log(id);
            if (type == "单选题") {
                input = $(this).find("input[name='q_" + id + "']:checked").first().val();
                a.answer = input;
                if (typeof (input) == "undefined" || input.length <= 0 || input.indexOf("undefine") != -1) {
                    alert("请完成全部问题！");
                    finish = false;
                    return false;
                }
            } else if (type == "多选题") {
                var input = "";
                $(this).find("input[type='checkbox']").each(function () {
                    if ($(this).is(':checked')) {
                        //checked
                        input += $(this).val() + ",";
                    }
                });
                if (input.length > 0) input = input.substring(0, input.length - 1);
                a.answer = input;
                if (typeof (input) == "undefined" || input.length <= 0 || input.indexOf("undefine") != -1) {
                    alert("请完成全部问题！");
                    finish = false;
                    return false;
                }
            } else if (type == "简答题") {
                var input = $(this).find("textarea").first().val();
                a.answer = input;
                if (typeof (input) == "undefined" || input.length <= 0) {
                    alert("请完成全部问题！");
                    finish = false;
                    return false;
                }
            } else if (type == "矩阵单选题（评价教师）") {
                var input = "";
                var allnum = $(this).find("tbody").first().find("tr").length;
                for (i = 0; i < allnum; i++) {
                    tname = "q_" + id + "_" + i;
                    input += $(this).find("input[name='" + tname + "']:checked").first().val() + ",";
                }

                if (typeof (input) == "undefined" || input.length <= 0 || input.indexOf("undefine") != -1) {
                    alert("请完成全部问题！");
                    finish = false;
                    return false;
                }
                if (input.length > 0) input = input.substring(0, input.length - 1);
                a.answer = input;
            } else if (type == "矩阵单选题（评价课程）") {
                var input = "";
                var allnum = $(this).find("tbody").first().find("tr").length;
                for (i = 0; i < allnum; i++) {
                    tname = "q_" + id + "_" + i;
                    input += $(this).find("input[name='" + tname + "']:checked").first().val() + ",";
                }

                if (typeof (input) == "undefined" || input.length <= 0 || input.indexOf("undefine") != -1) {
                    alert("请完成全部问题！");
                    finish = false;
                    return false;
                }
                if (input.length > 0) input = input.substring(0, input.length - 1);
                a.answer = input;
            }

            as.push(a);
        });

        if (!finish) return false;

        //console.log(as);

        var res = {
            ass: as
        };
        //console.log(res); //return;
        $.ajax({
            type: 'post',
            dataType: 'json',
            contentType: 'application/json; charset=utf-8',
            url: '@Url.Action("SubmitQn","Student")',
            data: JSON.stringify(as),
            //async: false,
            success: function (data) {
                console.log(data.responseText);
                if (data.responseText == "Success") {

                    window.location.href = "@Url.Action("Message", "Home", new { id = "您已回答了本问卷，感谢您的参与！" })";
                } else {
                    alert("问卷提交失败！");
                }
            },
            error: function (data) {
                console.log(data.responseText);
                if (data.responseText == "Success") {

                    window.location.href = "@Url.Action("Message", "Home", new { id = "您已回答了本问卷，感谢您的参与！" })";
                } else {
                    alert("问卷提交失败！");
                }
            }
        });
    }



